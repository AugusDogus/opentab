{
  "name": "opentab",
  "displayName": "opentab",
  "version": "0.1.0",
  "description": "Send tabs to your devices.",
  "author": "AugusDogus",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@opentab/api": "workspace:*",
    "@t3-oss/env-core": "catalog:",
    "@tanstack/react-query": "^5.90.12",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "@trpc/tanstack-react-query": "^11.7.2",
    "better-auth": "catalog:",
    "plasmo": "0.90.5",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwindcss": "3.4.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "catalog:"
  },
  "manifest": {
    "host_permissions": [
      "$PLASMO_PUBLIC_SERVER_URL/*"
    ],
    "permissions": [
      "contextMenus"
    ],
    "action": {
      "default_title": "opentab",
      "default_popup": "popup.html"
    }
  }
}
