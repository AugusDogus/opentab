{
  "name": "@opentab/extension",
  "displayName": "opentab",
  "version": "0.0.2",
  "description": "Send tabs to your devices.",
  "author": "AugusDogus",
  "scripts": {
    "dev": "plasmo dev --target=chrome-mv2",
    "build": "plasmo build --target=chrome-mv2",
    "package": "plasmo package --target=chrome-mv2",
    "typecheck": "tsc --noEmit",
    "postinstall": "bun scripts/patch-node-imports.ts"
  },
  "dependencies": {
    "@opentab/api": "workspace:*",
    "@opentab/crypto": "workspace:*",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-avatar": "^1.1.11",
    "@radix-ui/react-slot": "^1.2.4",
    "@t3-oss/env-core": "catalog:",
    "@tanstack/react-query": "^5.90.12",
    "@trpc/client": "catalog:",
    "@trpc/server": "catalog:",
    "@trpc/tanstack-react-query": "^11.7.2",
    "better-auth": "catalog:",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.562.0",
    "plasmo": "0.90.5",
    "react": "catalog:",
    "react-dom": "catalog:",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "catalog:",
    "tw-animate-css": "^1.4.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@tailwindcss/postcss": "^4",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "catalog:",
    "@types/react-dom": "catalog:",
    "postcss": "8.4.33",
    "prettier": "3.2.4",
    "typescript": "catalog:"
  },
  "manifest": {
    "permissions": [
      "activeTab",
      "tabs",
      "contextMenus",
      "storage",
      "$PLASMO_PUBLIC_SERVER_URL/*"
    ],
    "browser_action": {
      "default_title": "opentab",
      "default_popup": "popup.html"
    }
  }
}
