{
  "name": "opentab",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "@t3-oss/env-core": "^0.13.10",
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5",
      "@types/bun": "^1.3.4",
      "@trpc/server": "^11.7.2",
      "better-auth": "^1.4.7",
      "@trpc/client": "^11.7.2",
      "@better-auth/expo": "^1.4.7",
      "react": "19.1.0",
      "react-dom": "19.1.0",
      "@types/react": "~19.1.10",
      "@types/react-dom": "~19.1.10",
      "tailwindcss": "^4"
    }
  },
  "type": "module",
  "scripts": {
    "lint": "oxlint && oxfmt --write",
    "dev": "turbo dev",
    "build": "turbo build",
    "typecheck": "turbo typecheck",
    "dev:extension": "turbo -F @opentab/extension dev",
    "dev:native": "turbo -F @opentab/native dev",
    "dev:server": "turbo -F @opentab/server dev",
    "db:push": "turbo -F @opentab/db db:push",
    "db:studio": "turbo -F @opentab/db db:studio",
    "db:generate": "turbo -F @opentab/db db:generate",
    "db:migrate": "turbo -F @opentab/db db:migrate",
    "db:local": "turbo -F @opentab/db db:local",
    "release": "bumpp"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "catalog:",
    "bumpp": "^10.3.2",
    "oxfmt": "^0.19.0",
    "oxlint": "^1.34.0",
    "turbo": "^2.6.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.5",
  "patchedDependencies": {
    "plasmo@0.90.5": "patches/plasmo@0.90.5.patch",
    "xcode@3.0.1": "patches/xcode@3.0.1.patch",
    "@plasmohq/parcel-runtime@0.25.2": "patches/@plasmohq%2Fparcel-runtime@0.25.2.patch"
  }
}
